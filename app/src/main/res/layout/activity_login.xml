<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <Button
        android:text="Sign Up"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:layout_x="59dp"
        android:layout_y="513dp"
        android:id="@+id/button2"
        android:background="@drawable/blankbutton"
        android:shadowColor="@color/white"
        style="?android:attr/borderlessButtonStyle"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/login"
        android:layout_alignEnd="@+id/login"
        android:layout_marginBottom="10dp"
        android:layout_alignLeft="@+id/login"
        android:layout_alignStart="@+id/login" />

    <Button
        android:text="Login"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_x="56dp"
        android:layout_y="455dp"
        android:id="@+id/login"
        android:background="@drawable/roundedrectangles"
        android:shadowColor="@color/white"
        style="?android:attr/borderlessButtonStyle"
        android:layout_above="@+id/button2"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        />

    <ImageView
    android:layout_width="192dp"
    android:layout_height="192dp"
    app:srcCompat="@mipmap/mynsblogo"
    android:id="@+id/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <EditText
        android:layout_width="320dp"
        android:layout_height="45dp"
        android:inputType="textPassword"
        android:hint="@string/password"
        android:textStyle="bold"
        android:textColorHint="#000"
        android:ems="10"
        android:layout_x="42dp"
        android:layout_y="319dp"
        android:id="@+id/password"
        android:textColor="#000000"
        android:background="@drawable/edittextstyle"
        android:textAlignment="center"
        android:textCursorDrawable="@color/black"
        android:layout_marginBottom="87dp"
        android:layout_above="@+id/login"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="320dp"
        android:layout_height="45dp"
        android:inputType="textPersonName"
        android:hint="@string/username"
        android:textColorHint="#000"
        android:ems="10"
        android:layout_x="39dp"
        android:layout_y="256dp"
        android:id="@+id/username"
        android:textColor="#000000"
        android:background="@drawable/edittextstyle"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textCursorDrawable="@color/black"
        android:layout_above="@+id/password"
        android:layout_alignLeft="@+id/password"
        android:layout_alignStart="@+id/password"
        android:layout_marginBottom="10dp" />

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="55dp"
        android:visibility="invisible"
        android:layout_alignBottom="@+id/logo"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/password_icon"
        android:layout_alignBottom="@+id/password"
        android:layout_alignLeft="@+id/login"
        android:layout_alignStart="@+id/login"
        android:id="@+id/imageView2"
        android:layout_below="@+id/username" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/username_icon"
        android:id="@+id/imageView3"
        android:layout_alignTop="@+id/username"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2"
        android:layout_alignBottom="@+id/username" />

</RelativeLayout>
